{
  "version": 2,
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key",
    "SUPABASE_KEY": "@supabase_key",
    "LUCIA_ASSISTANT_ID": "@lucia_assistant_id",
    "N8N_WEBHOOK_URL": "@n8n_webhook_url",
    "CRON_SECRET": "@cron_secret"
  },
  "functions": {
    "api/lucia.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/sync.js": {
      "memory": 1024,
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/sync",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/sync",
      "schedule": "30 12 * * *"
    },
    {
      "path": "/api/sync",
      "schedule": "0 17 * * *"
    }
  ]
}
